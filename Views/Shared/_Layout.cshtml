<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Book Store Application</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        @*<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@

        @*as cdn of bootstrap loads faster by loading content from the nearest geographical location server we use cdn
        and if cdn is down or any problem occurs then this link tag will load minified css with asp-fallback-href*@
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    </environment>
    
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-secondary border-bottom box-shdow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex" href="#">
                    <img src="~/images/logo.png" alt="logo" class="logo" asp-append-version="true" />
                    <p class="display-4 text-info">Book Store</p>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary">Login</a>
                            <a class="btn btn-primary">Register</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 h5">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contactus">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">All Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                        </li>
                    </ul>
                    @*<form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>*@
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <div>
            @RenderBody()
        </div>
    </main>
    

    <!-- Footer -->
    <footer class="page-footer font-small pt-4 bg-secondary text-black">

        <!-- Footer Links -->
        <div class="container-fluid text-center text-md-left">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-6 mt-md-0 mt-3">

                    <!-- Content -->
                    <h5 class="text-uppercase">Footer Content</h5>
                    <p>Here you can use rows and columns to organize your footer content.</p>

                </div>
                <!-- Grid column -->

                <hr class="clearfix w-100 d-md-none pb-3">

                <!-- Grid column -->
                <div class="col-md-3 mb-md-0 mb-3">

                    <!-- Links -->
                    <h5 class="text-uppercase">Links</h5>

                    <ul class="list-unstyled text-black">
                        <li>
                            <a href="#!" class="text-black">Link 1</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 2</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 3</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 4</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-3 mb-md-0 mb-3">

                    <!-- Links -->
                    <h5 class="text-uppercase">Links</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a href="#!" class="text-black">Link 1</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 2</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 3</a>
                        </li>
                        <li>
                            <a href="#!" class="text-black">Link 4</a>
                        </li>
                    </ul>

                </div>
                <!-- Grid column -->

            </div>
            <!-- Grid row -->

        </div>
        <!-- Footer Links -->
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            Copyright: &copy; Book Store @DateTime.Now.Year <custom-email my-email="nikhil@gmail.com" style="color:indigo"></custom-email>
            <div class="container my-1">

                <!-- Grid row-->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-12">
                        <div class="mb-3 flex-center">

                            <!-- Facebook -->
                            <a href="#">
                                <i class="fab fa-facebook-f fa-lg text-dark mx-3"> </i>
                            </a>
                            <!-- Twitter -->
                            <a href="#">
                                <i class="fab fa-twitter fa-lg text-primary mx-3"> </i>
                            </a>
                            <!-- Google +-->
                            <a href="#">
                                <i class="fab fa-google-plus-g fa-lg text-danger mx-3"> </i>
                            </a>
                            <!--Linkedin -->
                            <a href="#">
                                <i class="fab fa-linkedin-in fa-lg text-white mx-3"> </i>
                            </a>
                            <!--Instagram-->
                            <a href="#">
                                <i class="fab fa-instagram fa-lg text-warning mx-3"> </i>
                            </a>
                        </div>
                    </div>
                    <!-- Grid column -->

                </div>
                <!-- Grid row-->

            </div>
        </div>
        <!-- Copyright -->
        
    </footer>
    <!-- Footer -->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>

    @RenderSection("scripts", required:false)
</body>
</html>
