@model BookStore.Models.SignUpUserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/Site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        @*<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@

        @*as cdn of bootstrap loads faster by loading content from the nearest geographical location server we use cdn
            and if cdn is down or any problem occurs then this link tag will load minified css with asp-fallback-href*@
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    </environment>

    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>


    <div class="container mt-2">
        <h4>Signup</h4>
        <hr />
        <div class="row">
            <div class="col-md-4" style="background-color:lightpink; border-radius:15px; padding:20px">
                <form asp-action="Signup">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h3 class="mb-4 pb-2 pb-md-0 mb-md-3">Registration Form</h3>
                    <div class="d-flex flex-row align-items-center mb-4">
                        @*<i class="fas fa-user fa-lg me-3 fa-fw"></i>*@
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        @*<i class="fas fa-user fa-lg me-3 fa-fw" style="visibility:hidden"></i>*@
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        @*<i class="fas fa-envelope fa-lg me-3 fa-fw"></i>*@
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="Email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        @*<i class="fas fa-lock fa-lg me-3 fa-fw"></i>*@
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        @*<i class="fas fa-key fa-lg me-3 fa-fw"></i>*@
                        <div class="form-outline flex-fill mb-0">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <input type="submit" value="Sign Up" class="btn btn-primary" />
                        <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none link-primary">Login here</a></p>
                    </div>
                </form>
            </div>

            <div class="col-md-8">
                <img src="~/images/signup.png" class="img-fluid" alt="Sample image">
            </div>
        </div>
    </div>

</body>
</html>
