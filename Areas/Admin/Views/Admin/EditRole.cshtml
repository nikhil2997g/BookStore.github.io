@using BookStore.Areas.Admin.Models
@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-2 mb-2">
    <h4>Edit Role</h4>
    <hr />
    <div class="row">
        <div class="col-md-5" style="background-color:lightpink; border-radius:15px; padding:20px">
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" disabled />
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                    <div class="form-outline flex-fill mb-0">
                        <label asp-for="RoleName" class="control-label"></label>
                        <input asp-for="RoleName" class="form-control" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-4 pt-2">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
                </div>

                <div class="card mt-2">
                    <div class="card-header">
                        <h3>Users in this Role</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            @foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">None at the Moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" asp-route-roleName="@Model.RoleName" class="btn btn-danger">Add or Remove Users</a>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>