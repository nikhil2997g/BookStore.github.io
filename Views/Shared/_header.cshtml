@using Microsoft.Extensions.Configuration
@inject IConfiguration _configuration
@*@inject BookStore.Repository.IBookRepository _bookrepo*@
@{ 
    var newBook = new NewBookAlertConfig();
    _configuration.Bind("NewBookAlert", newBook);
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary border-bottom box-shdow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex" href="#">
                <img src="~/images/logo.png" alt="logo" class="logo" asp-append-version="true" />
                <p class="display-4 text-info">@_configuration["AppName"]</p>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <partial name="_LoginInfo" />
                </ul>
                <ul class="navbar-nav flex-grow-1 h5">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Aboutus">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contactus">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="GetAllBooks">All Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="AddNewBook">Add New Book</a>
                    </li>
                </ul>
                @*<form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>*@
            </div>
        </div>
    </nav>
</header>

@if (newBook.DisplayNewBookAlert)
{
    <div class="alert alert-info" role="alert">
        @newBook.BookName
    </div>
}

